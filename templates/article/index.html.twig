        <script>
            $(document).ready(function() {
                $('.sendData').click(function(e) {
                    e.preventDefault();
                    var button = $(this);
                    var dataTable = button.data('table');
                    var dataField = button.data('field');
                    var dataValue = button.data('value');
                    var dataId = button.data('id');

                    var dataToSend = {
                        table: dataTable,
                        field: dataField,
                        value: dataValue,
                        id: dataId
                    };

                    $.ajax({
                        type: 'POST',
                        url: '{{ path('update_field') }}', // Replace with your Symfony route
                        data: dataToSend,
                        success: function(response) {
                            // Handle the response based on the action
                            if (dataField === 'published') {
                                // Update button's data-value attribute and text based on new value
                                var newValue = dataValue === 1 ? 0 : 1; // Toggle the value
                                button.data('value', newValue);
                                if (newValue === 1) {
                                    button.removeClass('badge-danger').addClass('badge-light-success').text('منتشر کردن');
                                } else {
                                    button.removeClass('badge-light-success').addClass('badge-danger').text('کنارگذاشتن');
                                }

                                // Update status display based on new value
                                var statusSpan = $('#publishStatus-' + dataId);
                                if (newValue === 0) {
                                    statusSpan.removeClass('badge-danger').addClass('badge-light-success').text('منتشر شده');
                                } else {
                                    statusSpan.removeClass('badge-light-success').addClass('badge-danger').text('در انتظار');
                                }
                            } else if (dataField === 'remove') {
                                // Remove the corresponding <tr> from the table
                                $('#articleRow-' + dataId).remove();
                            }

                            // Optionally show a success message
                            alert('OK: ' + response.message);
                        },
                        error: function(error) {
                            alert('Not OK: ' + error.responseJSON.error);
                        }
                    });
                });
            });
        </script>

{% endblock %}
{% block jshead %}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

{% endblock %}
{% block body %}

    <!--begin::Content-->
    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
            <!--begin::Post-->
            <div class="post d-flex flex-column-fluid" id="kt_post">
                    <!--begin::Container-->
                    <div id="kt_content_container" class="container-xxl">
                            <!--begin::محصولات-->
                            <div class="card card-flush">
                                    <!--begin::کارت header-->
                                    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                                            <!--begin::کارت title-->
                                            <div class="card-title">
                                                <form method="get" action="{{ path('app_article_index') }}">
                                                    <div class="input-group mb-3">
                                                        <input type="text" class="form-control" name="search" value="{{ searchQuery }}" placeholder="Search for articles...">
                                                        <button class="btn btn-outline-secondary" type="submit">Search</button>
                                                    </div>
                                                </form>
                                            </div>
                                            <!--end::کارت title-->
                                            <!--begin::کارت toolbar-->
                                            <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
                                                <a href="{{ path('app_article_new') }}" class="btn btn-primary">افزودن مقالات</a>
                                            </div>
                                            <!--end::کارت toolbar-->
                                    </div>
                                    <!--end::کارت header-->
                                    <!--begin::کارت body-->
                                    <div class="card-body pt-0">
                                            <!--begin::Table-->
                                            <table class="table align-middle table-row-dashed fs-6 gy-5 border" id="kt_ecommerce_products_table">
                                                <thead class="border">
                                                        <tr class="text-start fw-bold fs-7 text-uppercase gs-0">
                                                            <th class="min-w-40px">ردیف</th>
                                                            <th class="text-start min-w-100px">عنوان</th>
                                                            <th class="text-start min-w-70px">بازدید</th>
                                                            <th class="text-start min-w-100px">زمان ساخت</th>
                                                            <th class="text-start min-w-100px">زمان آپدیت</th>
                                                            <th class="text-start min-w-40px">وضعیت</th>
                                                            <th class="text-start min-w-70px">عملیات</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="fw-semibold border">
                                                        {% for article in articles %}
                                                                <tr id="articleRow-{{ article.id }}">
                                                                <td>
                                                                    <div class="d-flex align-items-center">
                                                                        <div class="d-flex align-items-center">
                                                                            <!--begin::Thumbnail-->
                                                                            {% if article.image is not null %}
                                                                                <a href="کاربران" class="symbol symbol-50px">
                                                                                    <span class="symbol-label" style="background-image: url({{ asset(article.image.path ~'/85x85_'~article.image.name) }}.webp"></span>
                                                                                </a>
                                                                            {% else %}
                                                                                <a href="کاربران" class="symbol symbol-50px">
                                                                                    <span class="symbol-label" style="background-image: url({{ asset('panel/assets/media/images/not-found.png') }})"></span>
                                                                                </a>
                                                                            {% endif %}
                                                                            <!--end::Thumbnail-->
                                                                        </div>
                                                                        <!--end::Thumbnail-->
                                                                        <div class="ms-5">
                                                                            <!--begin::Title-->
                                                                            <a href="کاربران" class="text-gray-800 text-hover-primary fs-5 fw-bold" data-kt-ecommerce-product-filter="product_name">{{ article.id }}</a>
                                                                            <!--end::Title-->
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                                    <td class="text-start pe-0">
                                                                        <span class="fw-bold">{{ article.title }}</span>
                                                                    </td>
                                                                    <td class="text-start pe-0" data-order="1">
                                                                        <span class="">{{ article.bazdid }}</span>
                                                                    </td>
                                                                    <td class="text-center pe-0">
                                                                    <span>{{ article.cdate|localizeddatetr('full', 'none', 'fa_IR@calendar=persian' , 'Asia/Tehran' , 'yyy/MM/dd' ) }} ساعت {{ article.cdate|localizeddatetr('full', 'none', 'fa_IR@calendar=persian' , 'Asia/Tehran' , ' HH:mm' ) }}</span>
                                                                    </td>
                                                                    <td class="text-center pe-0" data-order="در انتظار">
                                                                    <span>{{ article.udate|localizeddatetr('full', 'none', 'fa_IR@calendar=persian' , 'Asia/Tehran' , 'yyy/MM/dd' ) }} ساعت {{ article.udate|localizeddatetr('full', 'none', 'fa_IR@calendar=persian' , 'Asia/Tehran' , ' HH:mm' ) }}</span>
                                                                    </td>
                                                                    <td class="text-start">
                                                                        {% if article.published == 1 %}
                                                                            <span id="publishStatus-{{ article.id }}" class="badge badge-light-success">منتشر شده</span>
                                                                        {% else %}
                                                                            <span id="publishStatus-{{ article.id }}" class="badge badge-danger">در انتظار</span>
                                                                        {% endif %}
                                                                    </td>
                                                                    <td class="text-start">
                                                                        <span href="../../../index.html#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">عملیات
                                                                            <i class="ki-duotone ki-down fs-5 ms-1"></i>
                                                                        </span>
                                                                        <!--begin::Menu-->
                                                                        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                                                                                <!--begin::Menu item-->
                                                                                <div class="menu-item px-3">
                                                                                    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="menu-link px-3">ویرایش محصول</a>
                                                                                </div>
                                                                                <!--end::Menu item-->
                                                                                <!--begin::Menu item-->
                                                                                <div class="menu-item px-3">
                                                                                    <button id="removeButton-{{ article.id }}" href="#" class="sendData deleteData btn badge badge-dark" data-table="article" data-field="remove" data-value="1" data-id="{{ article.id }}">حذف کردن</button>
                                                                                </div>
                                                                                <div class="menu-item px-3">
                                                                                    {% if article.published == 0 %}
                                                                                        <button id="publishButton-{{ article.id }}" href="#" class="btn badge badge-light-success sendData" data-table="article" data-field="published" data-value="1" data-id="{{ article.id }}">منتشر کردن</button>
                                                                                    {% elseif article.published == 1 %}
                                                                                        <button id="publishButton-{{ article.id }}" href="#" class="btn badge badge-danger sendData" data-table="article" data-field="published" data-value="0" data-id="{{ article.id }}">کنارگذاشتن</button>
                                                                                    {% endif %}
                                                                                </div>
                                                                                <!--end::Menu item-->
                                                                        </div>
                                                                        <!--end::Menu-->
                                                                    </td>
                                                                </tr>
                                                        {% endfor %}

                                                    </tbody>
                                            </table>
                                            <!--end::Table-->
                                    </div>
                                    <!--end::کارت body-->
                            </div>
                            <!--end::محصولات-->
                    </div>
                    <!--end::Container-->
            </div>
            <!--end::Post-->
    </div>
{% endblock %}
