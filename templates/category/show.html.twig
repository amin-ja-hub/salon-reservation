{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ category.url }}</td>
            </tr>
            <tr>
                <th>Cdate</th>
                <td>{{ category.cdate ? category.cdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Udate</th>
                <td>{{ category.udate ? category.udate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ category.published }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ category.type }}</td>
            </tr>
            <tr>
                <th>MetaKey</th>
                <td>{{ category.metaKey }}</td>
            </tr>
            <tr>
                <th>Metadesc</th>
                <td>{{ category.metadesc }}</td>
            </tr>
            <tr>
                <th>Remove</th>
                <td>{{ category.remove }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">back to list</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
