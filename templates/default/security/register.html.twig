{% extends "base.front.twig" %}
{% block body %}
<!-- Page Title Section -->
<div class="page-title-wrap">
    <div class="page-title-area title-img-six">
        <div class="title-shape">
            <img src="assets/images/title/title-shape1.png" alt="Shape">
        </div>
        <div class="d-table">
            <div class="d-table-cell">
                <div class="title-content">
                    <h2>ثبت نام</h2>
                    <ul>
                        <li>
                            <a href="index.html">خانه</a>
                        </li>
                        <li>
                            <span>ثبت نام</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- User Area Section -->
<div class="user-area ptb-100">
    <div class="container">
        <div class="user-item">
            <!-- Decorative Shapes -->
            <div class="user-shape">
                <img src="{{ asset('front/assets/images/contact-shape1.png') }}" alt="Shape 1">
                <img src="{{ asset('front/assets/images/contact-shape2.png') }}" alt="Shape 2">
            </div>

            <h2>ثبت نام</h2>
            {{ form_start(registrationForm) }}
            
            <!-- Username Field -->
            <div class="form-group">
                <div class="password-error-container">
                    {{ form_errors(registrationForm.username) }}
                </div>
                <label class="form-label">نام کاربری</label>
                {{ form_widget(registrationForm.username) }}
            </div>
            
            <!-- Password Fields -->
            <div class="form-group clearfix">
                <div class="password-error-container">
                    {{ form_errors(registrationForm.plainPassword.first) }}
                </div>
                <label class="form-label">رمز عبور</label>
                {{ form_widget(registrationForm.plainPassword.first) }}
                <label class="form-label">تکرار رمز عبور</label>
                {{ form_widget(registrationForm.plainPassword.second) }}
            </div>

            <!-- Accept Terms Checkbox -->
            <div class="form-group checkbox clearfix">
                <div class="clearfix float-start">
                    <div class="form-check mb-0">
                        <input class="form-check-input" type="checkbox" id="acceptTerms" required>
                        <label class="form-check-label" for="acceptTerms">
                            من با شرایط استفاده از خدمات موافقم.
                        </label>
                    </div>
                </div>
            </div>
            
            <!-- Submit Button -->
            <div class="form-group clearfix">
                <button type="submit" class="btn common-btn two">ثبت نام</button>
            </div>
            {{ form_end(registrationForm) }}

            <h4>حساب کاربری دارید؟ <a href="{{ path('app_login') }}">ورود</a></h4>
        </div>
    </div>
</div>
    
{% endblock body %}