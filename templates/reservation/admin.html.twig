{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <!--begin::Content-->
    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
            <!--begin::Post-->
            <div class="post d-flex flex-column-fluid" id="kt_post">
                    <!--begin::Container-->
                    <div id="kt_content_container" class="container-xxl">
                            <!--begin::محصولات-->
                            <div class="card card-flush">
                                    <!--begin::کارت header-->
                                    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                                            <!--begin::کارت title-->
                                            <div class="card-title">
                                                    <!--begin::جستجو-->
                                                    <div class="d-flex align-items-center position-relative my-1">
                                                            <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                                                                    <span class="path1"></span>
                                                                    <span class="path2"></span>
                                                            </i>
                                                            <input type="text" data-kt-ecommerce-product-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="جستجو دسته بندی" />
                                                    </div>
                                                    <!--end::جستجو-->
                                            </div>
                                            <!--end::کارت title-->
                                            <!--begin::کارت toolbar-->
                                            <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
                                                <a href="{{ path('app_category_new') }}" class="btn btn-primary">افزودن دسته بندی</a>
                                            </div>
                                            <!--end::کارت toolbar-->
                                    </div>
                                    <!--end::کارت header-->
                                    <!--begin::کارت body-->
                                    <div class="card-body pt-0">
                                            <!--begin::Table-->
                                            <table class="table align-middle table-row-dashed fs-6 gy-5 border" id="kt_ecommerce_products_table">
                                                <thead class="border">
                                                        <tr class="text-start fw-bold fs-7 text-uppercase gs-0">
                                                            <th class="min-w-40px">ردیف</th>
                                                            <th class="text-start min-w-100px">پرسنل</th>
                                                            <th class="text-start min-w-100px">خدمات</th>
                                                            <th class="text-start min-w-100px">وقت رزرو</th>
                                                            <th class="text-start min-w-100px">مشتری</th>
                                                            <th class="text-start min-w-40px">زمان ساخت</th>
                                                            <th class="text-start min-w-70px">زمان تغییر</th>
                                                            <th class="text-start min-w-70px">وضعیت</th>
                                                            <th class="text-start min-w-70px">عملیات</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="fw-semibold border">
                                                        {% for reserve in reservations %}
                                                                <tr id="reserveRow-{{ reserve.id }}">
                                                                    <td>
                                                                        <div class="d-flex align-items-center">
                                                                            <div class="ms-5">
                                                                                <!--begin::Title-->
                                                                                <span>{{ reserve.id }}</span>
                                                                                <!--end::Title-->
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                    <td class="text-start">
                                                                        {{ reserve.personal.fullname ?? 'No user' }}
                                                                    </td>                                                                    
                                                                    <td class="text-start">
                                                                        {{ reserve.Service.title }} | {{ reserve.ServiceChild.title }}
                                                                    </td>                                                                      
                                                                    <td class="text-start">
                                                                        {{ reserve.reservationDateTime }}
                                                                    </td>            
                                                                    <td class="text-start">
                                                                        {{ reserve.user.id ?? 'No user' }}
                                                                    </td>                                                                    
                                                                    <td class="text-center pe-0">
                                                                    <span>{{ reserve.cdate|localizeddatetr('full', 'none', 'fa_IR@calendar=persian' , 'Asia/Tehran' , 'yyy/MM/dd' ) }} ساعت {{ reserve.cdate|localizeddatetr('full', 'none', 'fa_IR@calendar=persian' , 'Asia/Tehran' , ' HH:mm' ) }}</span>
                                                                    </td>
                                                                    <td class="text-center pe-0" data-order="در انتظار">
                                                                    <span>{{ reserve.udate|localizeddatetr('full', 'none', 'fa_IR@calendar=persian' , 'Asia/Tehran' , 'yyy/MM/dd' ) }} ساعت {{ reserve.udate|localizeddatetr('full', 'none', 'fa_IR@calendar=persian' , 'Asia/Tehran' , ' HH:mm' ) }}</span>
                                                                    </td>
                                                                    <td class="text-start">
                                                                        {% if reserve.published == 1 %}
                                                                            <span id="publishStatus-{{ reserve.id }}" class="badge badge-light-success">برسی شد</span>
                                                                        {% else %}
                                                                            <span id="publishStatus-{{ reserve.id }}" class="badge badge-danger">در انتظار</span>
                                                                        {% endif %}
                                                                    </td>
                                                                    <td class="text-start">
                                                                        <span href="../../../index.html#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">عملیات
                                                                            <i class="ki-duotone ki-down fs-5 ms-1"></i>
                                                                        </span>
                                                                        <!--begin::Menu-->
                                                                        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                                                                                <!--end::Menu item-->
                                                                                <!--begin::Menu item-->
                                                                                <div class="menu-item px-3">
                                                                                    <button id="removeButton-{{ reserve.id }}" href="#" class="sendData deleteData btn badge badge-dark" data-table="reserve" data-field="remove" data-value="1" data-id="{{ reserve.id }}">حذف کردن</button>
                                                                                </div>
                                                                                <div class="menu-item px-3">
                                                                                    {% if reserve.published == 0 %}
                                                                                        <button id="publishButton-{{ reserve.id }}" href="#" class="btn badge badge-light-success sendData" data-table="reserve" data-field="published" data-value="1" data-id="{{ reserve.id }}">برسی شد</button>
                                                                                    {% elseif reserve.published == 1 %}
                                                                                        <button id="publishButton-{{ reserve.id }}" href="#" class="btn badge badge-danger sendData" data-table="reserve" data-field="published" data-value="0" data-id="{{ reserve.id }}">کنارگذاشتن</button>
                                                                                    {% endif %}
                                                                                </div>
                                                                                <!--end::Menu item-->
                                                                        </div>
                                                                        <!--end::Menu-->
                                                                    </td>
                                                                </tr>
                                                        {% endfor %}

                                                    </tbody>
                                            </table>
                                            <!--end::Table-->
                                    </div>
                                    <!--end::کارت body-->
                            </div>
                            <!--end::محصولات-->
                    </div>
                    <!--end::Container-->
            </div>
            <!--end::Post-->
    </div>
{% endblock %}
