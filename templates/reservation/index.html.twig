{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cdate</th>
                <th>Udate</th>
                <th>Published</th>
                <th>Type</th>
                <th>Remove</th>
                <th>ReservationDateTime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.cdate ? reservation.cdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.udate ? reservation.udate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.published }}</td>
                <td>{{ reservation.type }}</td>
                <td>{{ reservation.remove }}</td>
                <td>{{ reservation.reservationDateTime }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}">Create new</a>
{% endblock %}
