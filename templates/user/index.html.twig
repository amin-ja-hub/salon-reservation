                                                                                    {% elseif user.published == 1 %}
                                                                                        <button id="publishButton-{{ user.id }}" href="#" class="btn badge badge-danger sendData" data-table="user" data-field="published" data-value="0" data-id="{{ user.id }}">کنارگذاشتن</button>
                                                                                    {% endif %}
                                                                                </div>
                                                                                <!--end::Menu item-->
                                                                        </div>
