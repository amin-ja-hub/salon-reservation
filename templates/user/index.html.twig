{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>Username</th>
                <th>PlainPassword</th>
                <th>Password</th>
                <th>Cdate</th>
                <th>Udate</th>
                <th>Published</th>
                <th>Role</th>
                <th>Remove</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.fullName }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.plainPassword }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.cdate ? user.cdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.udate ? user.udate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.published }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.remove }}</td>
                <td>{{ user.mobile }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
