{% extends 'base.html.twig' %}

{% block title %}ایجاد برنامه‌کاری جدید{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header">
                <h2 class="card-title">ایجاد برنامه کاری جدید</h2>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                
                <div class="form-group mb-3">
                    {{ form_label(form.startTime, 'زمان شروع', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.startTime, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-text">لطفاً زمان شروع را انتخاب کنید.</div>
                </div>
                
                <div class="form-group mb-3">
                    {{ form_label(form.endTime, 'زمان پایان', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.endTime, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-text">لطفاً زمان پایان را انتخاب کنید.</div>
                </div>
                
                <div class="form-group mb-3">
                    {{ form_label(form.dayOfWeek, 'روز هفته', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.dayOfWeek, {'attr': {'class': 'form-select'}}) }}
                    <div class="form-text">روز هفته را انتخاب کنید.</div>
                </div>
                
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">ذخیره برنامه</button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
